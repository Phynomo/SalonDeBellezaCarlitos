@model IEnumerable<SalonDeBellezaCarlitos.WebUI.Models.VWReservacionesViewModel>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{


<div>
    <h1 class="text-center">Detalles</h1>

    <h4 class="text-center">Reservaciones</h4>
    <hr />

    <div class="row">
        <div class="col">
            <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => item.clie_Nombre)</label><br />
            <label>@Html.DisplayFor(model => item.clie_Nombre) @Html.DisplayFor(model => item.clie_Apellido)</label>
        </div>
        <div class="col">
            <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => item.sucu_Descripcion)</label><br />
            <label>@Html.DisplayFor(model => item.sucu_Descripcion)</label>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => item.rese_HoraInicio)</label><br />
            <label>@Html.DisplayFor(model => item.rese_HoraInicio)</label>
        </div>
        <div class="col">
            <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => item.rese_HoraFin)</label><br />
            <label>@Html.DisplayFor(model => item.rese_HoraFin)</label>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label class="text-black font-weight-bold"> @Html.DisplayNameFor(model => item.rese_DiaReservado)</label><br />
            <label> @Html.DisplayFor(model => item.rese_DiaReservado)</label>
        </div>
    </div>
    <div class="row">
        <div class="col d-flex justify-content-end">
            <a asp-action="Edit" class="btn btn-warning btn-sm mx-1" asp-route-id="@item.rese_Id">Editar</a>
            <a class="btn btn-dark" asp-action="Index">Regresar al listado</a>
        </div>

    </div>


    <div class="card mt-4">
        <div class="card-header" style="background-color:#2a0637;">
            <h3 class="text-white ">Auditoria</h3>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Accion</th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Creado</td>
                        <td>@ViewBag.UsuarioCreacion</td>
                        <td>@Html.DisplayFor(model => item.rese_FechaCreacion)</td>
                    </tr>
                    <tr>
                        <td>Modificado</td>
                        <td>@ViewBag.UsuarioModificacion</td>
                        <td>@Html.DisplayFor(model => item.rese_FechaModificacion)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>}
