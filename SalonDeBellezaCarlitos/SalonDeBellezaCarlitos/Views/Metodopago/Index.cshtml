@model IEnumerable<SalonDeBellezaCarlitos.WebUI.Models.MetodoPagoViewModel>

<input type="hidden" value="@ViewBag.Toast" id="toast" />

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-center">
    <div class="col">
        <h1 class="text-center">Metodos de Pago</h1>    
        <hr />
    </div>
</div>

<div class="row mb-3 text-center">
    <div class="col">
        @*<a asp-action="Create">Create New</a>*@
        <button class="btn btn-primary" onclick="AbrirModalCreate()">Agregar un Metodo de pago</button>
    </div>
</div>
<table id="example" class="table dataTable compact hover stripe" style="width: 100%;" aria-describedby="example_info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.metp_Descripcion)
            </th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.metp_Descripcion)
                </td>
                <td class="text-end">
                    <button type="button" id="btnEditar" class="btn btn-outline-primary btn-sm" onclick="AbrirModalEdit('@item.metp_Id,@item.metp_Descripcion')">Editar</button> 
                    <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@item.metp_Id">Detalles</a> 
                    <button type="button" id="btnEliminar" class="btn btn-outline-danger btn-sm" onclick="AbrirModalDelete('@item.metp_Id')">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>



@Html.Partial("_MetodopagoCreateViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.MetodoPagoViewModel())

@Html.Partial("_MetodopagoEditViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.MetodoPagoViewModel())

@Html.Partial("_MetodopagoDeleteViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.MetodoPagoViewModel())

<script src="~/js/App/Salon/MetodosPago.js"></script>
