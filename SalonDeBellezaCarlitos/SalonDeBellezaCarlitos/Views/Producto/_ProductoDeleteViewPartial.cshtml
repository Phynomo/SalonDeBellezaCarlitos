@model SalonDeBellezaCarlitos.WebUI.Models.ProductoViewModel


<div class="modal" id="EliminarProducto" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Borrar Producto</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Delete" id="formDelete">
                <div class="modal-body">
                    <div class="modal-body text-center">
                        <div class="row mb-3">
                            <div class="col">
                                <input asp-for="prod_Id" class="form-control" id="prod_Id_Delete" name="prod_Id" hidden />
                                <h4 class="padding-top-30 mb-30 weight-500 ">¿Desea eliminar este Producto?</h4>
                                <label name="lbl_DescripcionDeleteError" id="lbl_DescripcionDeleteError" class="control-label" hidden style="color: red;">Ocurrio un error con este delete</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <button type="button" class="btn btn-primary mx-1" onclick="GuardarModalDelete()">Eliminar</button>
                                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>