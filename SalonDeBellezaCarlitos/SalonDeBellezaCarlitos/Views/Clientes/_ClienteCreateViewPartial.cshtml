@model SalonDeBellezaCarlitos.WebUI.Models.ClienteViewModel


<div class="modal" id="modalCreate" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crear Cliente</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Create" id="formCreate">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-6">
                        <label asp-for="clie_Nombre" class="control-label"></label>
                        <input asp-for="clie_Nombre" class="form-control" id="clie_Nombre" name="clie_Nombre" />
                        <label name="lbl_clie_Nombre" id="lbl_clie_Nombre" class="control-label" hidden style="color: red;">Este campo es requerido</label>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="clie_Apellido" class="control-label"></label>
                        <input asp-for="clie_Apellido" class="form-control" id="clie_Apellido" name="clie_Apellido" />
                        <label name="lbl_clie_Apellido" id="lbl_clie_Apellido" class="control-label" hidden style="color: red;">Este campo es requerido</label>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="clie_Telefono" class="control-label"></label>
                        <input asp-for="clie_Telefono" class="form-control" id="clie_Telefono" name="clie_Telefono" onkeypress="return soloNumeros(event)"/>
                        <label name="lbl_clie_Telefono" id="lbl_clie_Telefono" class="control-label" hidden style="color: red;">Este campo es requerido</label>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="clie_CorreoElectronico" class="control-label"></label>
                        <input asp-for="clie_CorreoElectronico" class="form-control" id="clie_CorreoElectronico" name="clie_CorreoElectronico" />
                        <label name="lbl_clie_CorreoElectronico" id="lbl_clie_CorreoElectronico" class="control-label" hidden style="color: red;">Este campo es requerido</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="GuardarModalCreate()">Guardar</button>
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>