@model SalonDeBellezaCarlitos.WebUI.Models.FacturasViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>tbFacturas</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group col">
                        <label asp-for="clie_Id" class="control-label"></label>
                        <select asp-for="clie_Id" class="form-control" asp-items="ViewBag.clie_Id">
                            <option value="">-- Selecciones un Cliente --</option>
                        </select>
                        <span asp-validation-for="clie_Id" class="text-danger" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group col">
                        <label asp-for="metp_Id" class="control-label"></label>
                        <select asp-for="metp_Id" class="form-control" asp-items="ViewBag.metp_Id">
                            <option value="">-- Selecciones un Metodo de pago --</option>
                        </select>
                        <span asp-validation-for="metp_Id" class="text-danger" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group col">
                        <label asp-for="empl_Id_Caja" class="control-label"></label>
                        <select asp-for="empl_Id_Caja" class="form-control" asp-items="ViewBag.empl_Id_Caja">
                            <option value="">-- Selecciones un Cajero --</option>
                        </select>
                        <span asp-validation-for="empl_Id_Caja" class="text-danger" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group col">
                        <label asp-for="empl_Id_Atendido" class="control-label"></label>
                        <select asp-for="empl_Id_Atendido" class="form-control" asp-items="ViewBag.empl_Id_Atendido">
                            <option value="">-- Selecciones un Estilista --</option>
                        </select>
                        <span asp-validation-for="empl_Id_Atendido" class="text-danger" />
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-end">
                <div class="col d-flex justify-content-end">
                    <input type="submit" value="Create" class="btn btn-primary mx-1" />
                    <a class="btn btn-dark" asp asp-action="Index">Regresar</a>
                </div>
            </div>
        </form>
    </div>
</div>

