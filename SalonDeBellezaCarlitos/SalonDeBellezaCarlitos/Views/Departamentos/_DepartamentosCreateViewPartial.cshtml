@model SalonDeBellezaCarlitos.WebUI.Models.DepartamentoViewModel


<div class="modal" id="modalCreate" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crear Departamento</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Create" id="formCreate">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="depa_Descripcion" class="control-label"></label>
                        <input asp-for="depa_Descripcion" class="form-control" id="depa_Descripcion" name="depa_Descripcion" />
                        <label name="lbl_depa_Descripcion" id="lbl_depa_Descripcion" class="control-label" hidden style="color: red;">Este campo es requerido</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="depa_Codigo" class="control-label"></label>
                        <input asp-for="depa_Codigo" class="form-control" id="depa_Codigo" maxlength="2" name="depa_Codigo" onkeypress="return soloNumeros(event)"/>
                        <label name="lbl_depa_Codigo" id="lbl_depa_Codigo" class="control-label" hidden style="color: red;">Este campo es requerido</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="GuardarModalCreate()">Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>