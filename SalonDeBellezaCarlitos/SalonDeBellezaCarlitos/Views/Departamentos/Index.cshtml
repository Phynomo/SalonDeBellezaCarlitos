@model IEnumerable<SalonDeBellezaCarlitos.WebUI.Models.DepartamentoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row text-center">
    <div class="col">
        <h1 class="text-decoration-underline text-center">LISTADO DEPARTAMENTOS</h1>
        <hr />
    </div>
</div>

<div class="row mb-3 text-center">
    <div class="col">
        <button class="btn btn-primary" onclick="AbrirModalCreate()">Agregar un Departamento</button>
    </div>
</div>
<table id="example" class="table dataTable compact hover stripe" style="width: 100%;" aria-describedby="example_info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.depa_Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.depa_Codigo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.depa_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.depa_Codigo)
                </td>
                <td class="text-end">
                    <button style="padding-top: 1.0%; font-size: 10px; height:25px;" type="button" id="btnEditar" class="btn btn-outline-warning btn-sm" onclick="AbrirModalEdit('@item.depa_Id,@item.depa_Descripcion,@item.depa_Codigo')">Editar</button> |
                    <a style="padding-top: 1.0%; font-size: 10px; height:25px;" class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.depa_Id">Detalles</a> |
                    <button style="padding-top: 1.0%; font-size: 10px; height:25px;" type="button" id="btnEliminar" class="btn btn-outline-danger btn-sm" onclick="AbrirModalDelete('@item.depa_Id')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>


@Html.Partial("_DepartamentosCreateViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.DepartamentoViewModel());

@Html.Partial("_DepartamentosEditViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.DepartamentoViewModel());

@Html.Partial("_DepartamentosDeleteViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.DepartamentoViewModel());




<script src="~/js/App/Salon/Departamentos.js"></script>