@model SalonDeBellezaCarlitos.WebUI.Models.UsuariosViewModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <link href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- Nifty CSS [ REQUIRED ] -->
    <link rel="stylesheet" href="~/css/nifty.min.css">

    <!-- Premium line icons [ OPTIONAL ] -->
    <link rel="stylesheet" href="~/premium/icon-sets/icons/line-icons/premium-line-icons.min.css">

    <!-- Premium solid icons [ OPTIONAL ] -->
    <link rel="stylesheet" href="~/premium/icon-sets/icons/solid-icons/premium-solid-icons.min.css">


    <link rel="stylesheet" href="~/css/Login/index.css">
    <link rel="stylesheet" href="~/css/toastr/toastr.min.css">
    <title>SDBC</title>
</head>

<body>
    <input type="hidden" value="@ViewBag.Toast" id="toast" />
    <section>
        <div class="form-box">
            <div class="form-value">
                <form asp-action="Index" id="loginform">
                    <h2>Login</h2>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input asp-for="usur_Usuario" id="usuario" type="text" placeholder=" ">
                        <label for="" id="lblUsuario1" hidden>Usuario</label>
                        <label for="" id="lblUsuario2" hidden class="text-danger" style="color:crimson;">Usuario*</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input asp-for="usur_Contrasenia" id="password" type="password" placeholder=" ">
                        <label for="" id="lblContraseña1" hidden>Contraseña</label>
                        <label for="" id="lblContraseña2" hidden class="text-danger" style="color: crimson;">Contraseña*</label>
                    </div>
                    
                    <div class="forget text-center">
                        <a class="text-white" style="margin:auto; font-size:1.2em; text-decoration:none;" onclick="abrirRecuperar()" href="#">Recuperar usuario</a>
                    </div>
                    <button class="mt-2" type="button" onclick="IniciarSesion()">Iniciar sesion</button>
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    @Html.Partial("_RecuperarContraseniaViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.UsuariosViewModel())
</body>

</html>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>


<script src="~/vendors/popperjs/popper.min.js" defer></script>

<!-- Bootstrap JS [ OPTIONAL ] -->
<script src="~/vendors/bootstrap/bootstrap.min.js" defer></script>

<!-- Nifty JS [ OPTIONAL ] -->
<script src="~/js/nifty.js" defer></script>
<script src="~/js/App/Seguridad/Login.js"></script>

<script src="~/js/toastr/toastr.min.js"></script>
<script src="~/js/toastr/toastr.js"></script>