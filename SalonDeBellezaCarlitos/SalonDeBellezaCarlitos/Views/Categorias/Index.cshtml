@model IEnumerable<SalonDeBellezaCarlitos.WebUI.Models.CategoriaViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-center">
    <div class="col">
        <h1>Index</h1>
        <hr />
    </div>
</div>

<div class="row mb-3 text-center">
    <div class="col">
        @*<a asp-action="Create">Create New</a>*@
        <button class="btn btn-primary" onclick="AbrirModalCreate()">Agregar Un Categoria</button>
    </div>
</div>
<table id="example" class="table dataTable compact hover stripe" style="width: 100%;" aria-describedby="example_info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cate_Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cate_FechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cate_FechaModificacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cate_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cate_FechaCreacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cate_FechaModificacion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.cate_Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.cate_Id">Details</a> |
                    <button style="padding-top: 1.5%; font-size: 10px; height:25px;" type="button" id="btnEliminar" class="btn btn-outline-danger btn-sm" onclick="AbrirModalDelete('@item.cate_Id')">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>


@Html.Partial("_CategoriasCreateViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.CategoriaViewModel());

@Html.Partial("_CategoriasDeleteViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.CategoriaViewModel());


<script src="~/js/App/Salon/Categorias.js"></script>