@model SalonDeBellezaCarlitos.WebUI.Models.ProveedorViewModel


<div class="modal" id="EliminarProveedor" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content text-cen">
            <div class="modal-header text-center">
                <h5 class="text-center" style="margin:auto;">Eliminar proveedor</h5>
                @*<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>*@
            </div>
            <form asp-action="Delete" id="formDelete">
                <div class="modal-body">
                    <div class="modal-body text-center">
                        <div class="row mb-3">
                            <div class="col">
                                <input asp-for="prov_Id" class="form-control" id="prov_Id_Delete" name="prov_Id" hidden />
                                <h4 class="padding-top-30 mb-30 weight-500">¿Esta seguro de eliminar a este proveedor?</h4>
                                <label name="lbl_DescripcionDeleteError" id="lbl_DescripcionDeleteError" class="control-label" hidden style="color: red;">Ocurrio un error con este delete</label>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <button type="button" class="btn btn-danger mx-1" onclick="GuardarModalDelete()">Eliminar</button>
                                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>