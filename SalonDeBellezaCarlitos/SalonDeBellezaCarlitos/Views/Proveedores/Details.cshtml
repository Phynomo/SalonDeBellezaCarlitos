@model SalonDeBellezaCarlitos.WebUI.Models.ProveedorViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Detalles</h1>

<div>
    <h4 class="text-center">Proveedores</h4>
    <hr />

    <div class="row">
        <div class="col">
            <label class="text-black font-weight-bold"> @Html.DisplayNameFor(model => model.prov_NombreEmpresa)</label><br />
            <label>@Html.DisplayFor(model => model.prov_NombreEmpresa)</label>
        </div>
        <div class="col">
            <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => model.prov_NombreContacto)</label><br />
            <label>@Html.DisplayFor(model => model.prov_NombreContacto)</label>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label class="text-black font-weight-bold">Departamento</label><br />
            <label>@ViewBag.depa_Id</label>
        </div>
        <div class="col">
            <label class="text-black font-weight-bold">Municipio</label><br />
            <label>@ViewBag.muni_Id</label>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => model.prov_DireccionExacta)</label><br />
            <label>@Html.DisplayFor(model => model.prov_DireccionExacta)</label>
        </div>
        <div class="col">
            <label class="text-black font-weight-bold"> @Html.DisplayNameFor(model => model.prov_Telefono)</label><br />
            <label>@Html.DisplayFor(model => model.prov_Telefono)</label>
        </div>
    </div>

    <div class="row">
        <div class="col d-flex justify-content-end">
            <a class="btn btn-warning mx-1" asp-action="Edit" asp-route-id="@Model.prov_Id">Editar</a>
            <a class="btn btn-dark" asp-action="Index">Regresar al listado</a>
        </div>

    </div>

    <div class="card mt-4">
        <div class="card-header" style="background-color:#2a0637;">
            <h3 class="text-white ">Auditoria</h3>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Accion</th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Creado</td>
                        <td>@ViewBag.UsuarioCreacion</td>
                        <td>@Html.DisplayFor(model => model.prov_FechaCreacion)</td>
                    </tr>
                    <tr>
                        <td>Modificado</td>
                        <td>@ViewBag.UsuarioModificacion</td>
                        <td>@Html.DisplayFor(model => model.prov_FechaModificacion)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


</div>
