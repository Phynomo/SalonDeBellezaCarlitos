@model SalonDeBellezaCarlitos.WebUI.Models.ProveedorViewModel

<input type="hidden" value="@ViewBag.Toast" id="toast" />
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Crear</h1>

<h4 class="text-center">Proveedores</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="prov_NombreEmpresa" class="control-label"></label>
                        <input asp-for="prov_NombreEmpresa" class="form-control" />
                        <span asp-validation-for="prov_NombreEmpresa" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="prov_NombreContacto" class="control-label"></label>
                        <input asp-for="prov_NombreContacto" class="form-control" />
                        <span asp-validation-for="prov_NombreContacto" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="depa_Id" class="control-label"></label>
                    <select asp-for="depa_Id" class="form-select" asp-items="ViewBag.depa_Id">
                        <option value="">-- Selecciones un Departamento --</option>
                    </select>
                    <span asp-validation-for="depa_Id" class="text-danger" />

                </div>
                <div class="form-group col">
                    <label asp-for="muni_Id" class="control-label"></label>
                    <select asp-for="muni_Id" class="form-select" asp-items="ViewBag.muni_Id">
                        <option value="">-- Selecciones un Municipio --</option>
                    </select>
                    <span asp-validation-for="muni_Id" class="text-danger" />
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="prov_DireccionExacta" class="control-label"></label>
                        <input asp-for="prov_DireccionExacta" class="form-control" />
                        <span asp-validation-for="prov_DireccionExacta" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="prov_Telefono" class="control-label"></label>
                        <input asp-for="prov_Telefono" class="form-control" />
                        <span asp-validation-for="prov_Telefono" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-end">
                <div class="col d-flex justify-content-end">
                    <a class="btn btn-dark" asp asp-action="Index">Regresar al listado</a>
                    <input type="submit" value="Crear regitro" class="btn btn-primary mx-1" />
                </div>
            </div>
        </form>
    </div>
</div>



<script src="~/js/App/Salon/Proveedores.js"></script>
