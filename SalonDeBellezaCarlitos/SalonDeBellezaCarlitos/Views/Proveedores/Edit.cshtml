@model SalonDeBellezaCarlitos.WebUI.Models.ProveedorViewModel

<input type="hidden" value="@ViewBag.Toast" id="toast" />
@{ ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1 class="text-center">Editar</h1>

<h4 class="text-center">Proveedores</h4>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Edit" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="prov_Id" name="prov_Id" />
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="prov_NombreEmpresa" class="control-label"></label>
                        <input asp-for="prov_NombreEmpresa" id="prov_NombreEmpresa" class="form-control" />
                        <span id="lblprov_NombreEmpresa" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="prov_NombreContacto" class="control-label"></label>
                        <input asp-for="prov_NombreContacto" id="prov_NombreContacto" class="form-control" />
                        <span id="lblprov_NombreContacto" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="depa_Id" class="control-label"></label>
                    <select asp-for="depa_Id" id="depa_Id" class="form-select" asp-items="ViewBag.depa_Id">
                        <option value="">-- Selecciones un Departamento --</option>
                    </select>
                    <span id="lbldepa_Id" class="text-danger" hidden>Este campo es requerido</span>

                </div>
                <div class="form-group col">
                    <label asp-for="muni_Id" class="control-label"></label>
                    <select asp-for="muni_Id" id="muni_Id" class="form-select" asp-items="ViewBag.muni_Id">
                        <option value="">-- Selecciones un Municipio --</option>
                    </select>
                    <span id="lblmuni_Id" class="text-danger" hidden>Este campo es requerido</span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="prov_DireccionExacta" class="control-label"></label>
                        <input asp-for="prov_DireccionExacta" id="prov_DireccionExacta" class="form-control" />
                        <span id="lblprov_DireccionExacta" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="prov_Telefono" class="control-label"></label>
                        <input asp-for="prov_Telefono" id="prov_Telefono" class="form-control" />
                        <span id="lblprov_Telefono" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </div>
            </div>
            <div class="form-group d-flex justify-content-end">
                <a class="btn btn-dark mx-1" asp-action="Index">Regresar al listado</a>
                <input type="button" value="Editar Registro" onclick="EnviarForm()" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script src="~/js/App/Salon/Proveedores.js"></script>