@model IEnumerable<SalonDeBellezaCarlitos.WebUI.Models.VWMunicipiosViewModel>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Detalles</h1>
@foreach (var item in Model)
{
    <h4 class="text-center">Municipios</h4>
                    <hr />

                    <div class="row">
                        <div class="col">
                            <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => item.muni_Descripcion)</label><br />
                            <label> @Html.DisplayFor(model => item.muni_Descripcion)</label>
                        </div>
                        <div class="col">
                            <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => item.muni_Codigo)</label><br />
                            <label>@Html.DisplayFor(model => item.muni_Codigo)</label>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col">
                            <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => model.depa_Descripcion)</label><br />
                            <label> @Html.DisplayFor(model => item.depa_Descripcion)</label>
                        </div>
                        <div class="col">
                            <label class="text-black font-weight-bold">@Html.DisplayNameFor(model => model.depa_Codigo)</label><br />
                            <label> @Html.DisplayFor(model => item.depa_Codigo)</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col d-flex justify-content-end">
                            <button type="button" id="btnEditar" class="btn btn-warning mx-1" onclick="AbrirModalEdit('@item.muni_Id,@item.muni_Codigo,@item.muni_Descripcion,@item.depa_Id')">Editar</button>
                            <a class="btn btn-dark" asp-action="Index">Regresar al listado</a>
                        </div>
                    </div>



                    <div class="card mt-4">
                        <div class="card-header" style="background-color:#8e618d;">
                            <h3 class="text-white ">Auditoria</h3>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Accion</th>
                                        <th>Usuario</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Creado</td>
                                        <td>@ViewBag.UsuarioCreacion</td>
                                        <td>@Html.DisplayFor(model => item.muni_FechaCreacion)</td>
                                    </tr>
                                    <tr>
                                        <td>Modificado</td>
                                        <td>@ViewBag.UsuarioModificacion</td>
                                        <td>@Html.DisplayFor(model => item.muni_FechaModificacion)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>


 }


@Html.Partial("_MunicipiosEditViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.MunicipioViewModel())


<script src="~/js/App/General/Municipios.js"></script>