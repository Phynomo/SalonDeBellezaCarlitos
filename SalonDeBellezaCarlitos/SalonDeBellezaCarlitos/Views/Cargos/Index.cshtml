@model IEnumerable<SalonDeBellezaCarlitos.WebUI.Models.CargoViewModel>

<input type="hidden" value="@ViewBag.Toast" id="toast"/>

@{
    ViewData["Title"] = "Cargos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-center">
    <div class="col">
        <h1>Cargos</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <hr />
    </div>
</div>

<div class="row mb-3 text-center">
    <div class="col">
        @*<a asp-action="Create">Create New</a>*@
        <button class="btn btn-primary" onclick="AbrirModalCreate()">Crear un nuevo cargo</button>
    </div>
</div>

<table id="example" class="table dataTable compact hover stripe" style="width: 100%;" aria-describedby="example_info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.carg_Descripcion)
            </th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.carg_Descripcion)
    </td>
    <td class="text-end">
        <button  type="button" id="btnEditar" class="btn btn-outline-primary btn-sm" onclick="AbrirModalEdit('@item.carg_Id,@item.carg_Descripcion')">Editar</button> |
        <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@item.carg_Id">Detalles</a> |
        <button  type="button" id="btnEliminar" class="btn btn-outline-danger btn-sm" onclick="AbrirModalDelete('@item.carg_Id')">Eliminar</button>
    </td>
</tr>}
    </tbody>
</table>

@Html.Partial("_CreateModalPartialView", new SalonDeBellezaCarlitos.WebUI.Models.CargoViewModel())

@Html.Partial("_CargosEditViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.CargoViewModel())

@Html.Partial("_CargosDeleteViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.CargoViewModel())


<script src="~/js/App/Salon/Cargos.js"></script>