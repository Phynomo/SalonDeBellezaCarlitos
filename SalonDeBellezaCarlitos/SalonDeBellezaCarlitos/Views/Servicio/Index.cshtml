@model IEnumerable<SalonDeBellezaCarlitos.WebUI.Models.ServicioViewModel>

<input type="hidden" value="@ViewBag.Toast" id="toast" />

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-center">
    <div class="col">
        <h1 class="text-center">Servicios</h1>
        <hr />
    </div>
</div>

<div class="row mb-3 text-center">
    <div class="col">
        <button class="btn btn-primary" onclick="AbrirModalCreate()">Agregar Un Servicio</button>
    </div>
</div>
<table id="example" class="table dataTable compact hover stripe" style="width: 100%;" aria-describedby="example_info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.serv_Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.serv_Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.serv_Precio)
            </th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.serv_Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.serv_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.serv_Precio)
                </td>
                <td class="text-end">
                    <button type="button" id="btnEditar" class="btn btn-outline-primary btn-sm" onclick="AbrirModalEdit('@item.serv_Id,@item.serv_Nombre,@item.serv_Descripcion,@item.serv_Precio')">Editar</button> 
                    <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@item.serv_Id">Detalles</a> 
                    <button type="button" id="btnEliminar" class="btn btn-outline-danger btn-sm" onclick="AbrirModalDelete('@item.serv_Id')">Eliminar</button>

                </td>
            </tr>
        }
    </tbody>
</table>


@Html.Partial("_ServicioCreateModalViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.ServicioViewModel())

@Html.Partial("_ServicioEditModalViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.ServicioViewModel())

@Html.Partial("_ServicioDeleteModalViewPartial", new SalonDeBellezaCarlitos.WebUI.Models.ServicioViewModel())

<script src="~/js/App/Salon/Servicios.js"></script>
