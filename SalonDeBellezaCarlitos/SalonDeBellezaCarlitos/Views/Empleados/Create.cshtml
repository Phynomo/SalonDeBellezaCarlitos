@model SalonDeBellezaCarlitos.WebUI.Models.EmpleadoViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Crear</h1>

<h4 class="text-center">Empleados</h4>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="empl_Nombre" class="control-label"></label>
                    <input asp-for="empl_Nombre" class="form-control" />
                    <span asp-validation-for="empl_Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="empl_Apellido" class="control-label"></label>
                    <input asp-for="empl_Apellido" class="form-control" />
                    <span asp-validation-for="empl_Apellido" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="depa_Id" class="control-label"></label>
                    <select asp-for="depa_Id" class="form-control" asp-items="ViewBag.depa_Id">
                        <option value="">-- Selecciones un Departamento --</option>
                    </select>
                    <span asp-validation-for="muni_Id" class="text-danger" />

                </div>
                <div class="form-group col">
                    <label asp-for="muni_Id" class="control-label"></label>
                    <select asp-for="muni_Id" class="form-control" asp-items="ViewBag.muni_Id">
                        <option value="">-- Selecciones un Municipio --</option>
                    </select>
                    <span asp-validation-for="muni_Id" class="text-danger" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="empl_Sexo" class="control-label"></label>
                    <br />
                    Masculino:     @Html.RadioButtonFor(model => model.empl_Sexo, "M")<br />
                    Femenino :    @Html.RadioButtonFor(model => model.empl_Sexo, "F")
                    <br />
                    <span asp-validation-for="empl_Sexo" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="sucu_Id" class="control-label"></label>
                    <select asp-for="sucu_Id" class="form-control" asp-items="ViewBag.sucu_Id">
                        <option value="">-- Selecciones un Municipio --</option>
                    </select>
                    <span asp-validation-for="sucu_Id" class="text-danger" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="estc_Id" class="control-label"></label>
                    <select asp-for="estc_Id" class="form-control" asp-items="ViewBag.estc_Id">
                        <option value="">-- Seleccione un Estado civil--</option>
                    </select>
                    <span asp-validation-for="estc_Id" class="text-danger" />
                </div>
                <div class="form-group col">
                    <label asp-for="carg_Id" class="control-label"></label>
                    <select asp-for="carg_Id" class="form-control" asp-items="ViewBag.carg_Id">
                        <option value="">-- Seleccione un cargo --</option>
                    </select>
                    <span asp-validation-for="carg_Id" class="text-danger" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="empl_Telefono" class="control-label"></label>
                    <input asp-for="empl_Telefono" class="form-control" />
                    <span asp-validation-for="empl_Telefono" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="empl_CorreoElectronico" class="control-label"></label>
                    <input asp-for="empl_CorreoElectronico" class="form-control" />
                    <span asp-validation-for="empl_CorreoElectronico" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="empl_FechaNacimiento" class="control-label"></label>
                    <input asp-for="empl_FechaNacimiento" class="form-control" type="date" />
                    <span asp-validation-for="empl_FechaNacimiento" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="empl_FechaContratacion" class="control-label"></label>
                    <input asp-for="empl_FechaContratacion" class="form-control" type="date" />
                    <span asp-validation-for="empl_FechaContratacion" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="empl_DireccionExacta" class="control-label"></label>
                    <input asp-for="empl_DireccionExacta" class="form-control" />
                    <span asp-validation-for="empl_DireccionExacta" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group d-flex justify-content-end">
                <a class="btn btn-dark mx-1" asp-action="Index">Regresar al listado</a>
                <input type="submit" value="Crear registro" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<script src="~/js/App/Salon/Empleados.js"></script>