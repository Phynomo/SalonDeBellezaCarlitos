@model SalonDeBellezaCarlitos.WebUI.Models.EmpleadoViewModel

@{ ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1 class="text-center">Editar</h1>

<h4 class="text-center">Empleados</h4>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Edit" id="formCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <input type="hidden" asp-for="empl_Id" value="@ViewBag.empl_Id" />
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="empl_Nombre" class="control-label"></label>
                        <input asp-for="empl_Nombre" id="empl_Nombre" class="form-control" />
                        <span id="lblempl_Nombre" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="empl_Apellido" class="control-label"></label>
                        <input asp-for="empl_Apellido" id="empl_Apellido" class="form-control" />
                        <span id="lblempl_Apellido" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="depa_Id" class="control-label"></label>
                        <select asp-for="depa_Id" id="depa_Id" class="form-select" asp-items="ViewBag.depa_Id">
                            <option value="">-- Seleccione un Departamento --</option>
                        </select>
                        <span id="lbldepa_Id" class="text-danger" hidden>Este campo es requerido</span>

                    </div>
                    <div class="form-group col">
                        <label asp-for="muni_Id" class="control-label"></label>
                        <select asp-for="muni_Id" id="muni_Id" class="form-select" asp-items="ViewBag.muni_Id">
                            <option value="">-- Seleccione un Municipio --</option>
                        </select>
                        <span id="lblmuni_Id" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="empl_Sexo" class="control-label"></label>
                        <br />
                        <input type="radio" name="empl_Sexo" id="M" value="M" @ViewBag.empl_SexoM /> Masculino<br />
                        <input type="radio" name="empl_Sexo" id="F" value="F" @ViewBag.empl_SexoF /> Femenino
                        <br />
                        <span id="lblempl_Sexo" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="sucu_Id" class="control-label"></label>
                        <select asp-for="sucu_Id" id="sucu_Id" class="form-select" asp-items="ViewBag.sucu_Id">
                            <option value="">-- Seleccione una Sucursal --</option>
                        </select>
                        <span id="lblsucu_Id" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="estc_Id" class="control-label"></label>
                        <select asp-for="estc_Id" id="estc_Id" class="form-select" asp-items="ViewBag.estc_Id">
                            <option value="">-- Seleccione un Estado civil--</option>
                        </select>
                        <span id="lblestc_Id" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="carg_Id" class="control-label"></label>
                        <select asp-for="carg_Id" id="carg_Id" class="form-select" asp-items="ViewBag.carg_Id">
                            <option value="">-- Seleccione un cargo --</option>
                        </select>
                        <span id="lblcarg_Id" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="empl_Telefono" class="control-label"></label>
                        <input asp-for="empl_Telefono" id="empl_Telefono" class="form-control" />
                        <span id="lblempl_Telefono" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="empl_CorreoElectronico" class="control-label"></label>
                        <input asp-for="empl_CorreoElectronico" id="empl_CorreoElectronico" class="form-control" />
                        <span id="lblempl_CorreoElectronico" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="empl_FechaNacimiento" class="control-label"></label>
                        <input asp-for="empl_FechaNacimiento" id="empl_FechaNacimiento" class="form-control" type="date" />
                        <span id="lblempl_FechaNacimiento" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="empl_FechaContratacion" class="control-label"></label>
                        <input asp-for="empl_FechaContratacion" id="empl_FechaContratacion" class="form-control" type="date" />
                        <span id="lblempl_FechaContratacion" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="empl_DireccionExacta" class="control-label"></label>
                        <textarea asp-for="empl_DireccionExacta" id="empl_DireccionExacta" class="form-control"></textarea>
                        <span id="lblempl_DireccionExacta" class="text-danger" hidden>Este campo es requerido</span>
                    </div>
                </div>


                <div class="form-group d-flex justify-content-end">
                    <a class="btn btn-dark mx-1" asp-action="Index">Regresar al listado</a>
                    <input type="button" value="Editar Registro" onclick="EnviaFormuario()" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>



<script src="~/js/App/Salon/Empleados.js"></script>